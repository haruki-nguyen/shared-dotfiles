# Stow ignore patterns for dotfiles
# Comments and blank lines are allowed

# Version control
.git
.gitignore
.gitmodules
.gitattributes

# Documentation
README.md
LICENSE
COPYING
.*\.md

# Build artifacts and temporary files
.*\.log
.*\.tmp
.*\.cache
.*\.swp
.*\.swo
.*~

# IDE and editor files
.vscode/
.idea/
.*\.sublime-.*
.atom/

# OS-specific files
.DS_Store
Thumbs.db
desktop.ini

# Application-specific ignores
.config/tmux/plugins/
.config/btop/btop.log
.config/warp-terminal/user_preferences.json

# Personal ignores
.gitconfig
